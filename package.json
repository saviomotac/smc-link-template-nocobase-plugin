  "main": "dist/server/index.js",
  "module": "dist/client/index.js",
  "files": ["dist"],
  "scripts": {
    "build": "node scripts/cleanDist.cjs && tsup && node scripts/genExternalVersion.cjs"
  },

  "devDependencies": {
    "@nocobase/client": "1.9.32",
    "@nocobase/server": "1.9.32",
    "@formily/react": "2.x",
    "@formily/core": "2.x",
    "react": "18.x",
    "react-dom": "18.x",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0"
  },

  "peerDependencies": {
    "@nocobase/client": "1.9.32",
    "@nocobase/server": "1.9.32"
  }
